use strict;
use warnings;
our $VERSION = '0.03'; # VERSION
#
use App::Dancer2;

my $opt = App::Dancer2->new_with_options;
if ($opt->app) {
    $opt->create_app;
} elsif ($opt->install_head) {
    $opt->install_head_with_cpanm;
} else {
    $opt->options_usage;
}

__END__

